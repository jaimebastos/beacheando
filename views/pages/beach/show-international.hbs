<div class="container">
    <h1>Playas internacionales</h1>
    <a class="btn btn-dark" href="/beach/crear">Crear playa</a>

    <div class="row">
        {{#each allInternationalBeaches}}
        <div class="col-md-4">
            <figure>{{image}}</figure>
            <h3>{{name}}</h3>
            <p>{{city}}, {{country}}</p>
            <p> {{caption}} </p>
            <a class="btn btn-dark" href="#">+ info</a>
        </div>
        {{/each}}
    </div>
</div>