<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Editar playa</h1>
            <hr>

            <form class="row g-3" action="/beach/editar?beach_id={{id}}" method="POST">
                <div class="col-md-6">
                    <label for="name" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="col-md-6">
                    <label for="city" class="form-label">Ciudad</label>
                    <input type="city" class="form-control" id="city" name="city">
                </div>
                <div class="col-md-6">
                    <label for="country" class="form-label">Pais</label>
                    <input type="text" class="form-control" id="country" name="country">
                </div>
                <div class="col-md-6">
                    <label for="caption" class="form-label">Breve descripci√≥n</label>
                    <input type="caption" class="form-control" id="caption" name="caption">
                </div>
                <div class="col-md-6">
                    <label for="image" class="form-label">Imagen</label>
                    <input type="image" class="form-control" id="image" name="image">
                </div>
                <div class="col-md-6">
                    <label for="description" class="form-label">Latitud</label>
                    <input type="text" class="form-control" id="description">
                </div>
                <div class="col-md-6">
                    <label for="description" class="form-label">Longitud</label>
                    <input type="text" class="form-control" id="description">
                </div>
                <div class="col-md-6">
                    <label for="description" class="form-label">Descripcion</label>
                    <input type="description" class="form-control" id="description" name="description">
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-dark btn btn-block btn-create">Guardar</button>
                </div>
                {{#if errorMessage}}
                <div id="error">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}
            </form>
        </div>
    </div>
</div>